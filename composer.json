{
    "name": "recca0120/woocommerce-omnipay",
    "description": "WooCommerce payment gateway plugin using Omnipay library",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Recca Tsai",
            "email": "recca0120@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "omnipay/common": "^3.0",
        "omnipay-taiwan/omnipay-bank-transfer": "^1.0",
        "omnipay-taiwan/omnipay-ecpay": "^1.1",
        "omnipay-taiwan/omnipay-newebpay": "^1.0",
        "omnipay-taiwan/omnipay-yipay": "^1.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0",
        "nyholm/psr7": "^1.8"
    },
    "require-dev": {
        "omnipay/dummy": "^3.0",
        "phpunit/phpunit": "^8.5 || ^9.5",
        "wp-phpunit/wp-phpunit": "^6.6",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Recca0120\\WooCommerce_Omnipay\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Recca0120\\WooCommerce_Omnipay\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {}
    }
}
